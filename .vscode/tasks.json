{
   // 按 ctrl + shift + B 使用
   "version": "2.0.0",
   "tasks": [
      {
         "type": "shell",
         "label": "Sphinx 编译",
         "command": "sphinx-build.exe",
         "args": [
            "-b",
            "html",
            "source",
            "build"
         ],
         "options": {
            "cwd": "${workspaceFolder}"
         },
         "group": {
            "kind": "build",
            "isDefault": true
         },
         "problemMatcher": []
      }
   ]
}